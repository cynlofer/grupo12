<!-- Include Head -->
<%- include('partials/header', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
    <%- include('partials/headProductUp') %>
    <!-- /Header -->

	<!-- todos los productos -->
<div class="container_general">
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"><%= titulo %> </h2> <br>
				<!-- <form action="/products/create" method="get" style="display: inline-flex">
					<button type="submit" class="action-button delete">Agregar Producto</button>
				</form> -->
				<% if (admin) { %>
					<a href= <%= "/products/create" %> class="action-button edit">AGREGAR PRODUCTO</a>
				<% } %>
			</div>
			<% products.forEach(producto => { %>
			<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href= <%= "/products/" + producto.id %> >
								<figure class="product-box_image">
									<img class="imageHomeProd" src= <%= "/images/products/" + producto.images %> class="imageHomeProd" src=""  alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2> $ <%= producto.price %> </h2>
									<span> $ <%= producto.promocion %> OFF</span>
									<p><%= producto.name %> </p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
			</div>
			<% }) %>
		</div>
	</div>
</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>