<html lang="es">
<!-- Include Head -->
<%- include('partials/headCart', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
			<% products.forEach (producto => { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href= <%= "/products/detail/" + producto.id %> >
						<figure class="product-box_image">
							<img src= <%= "/images/products/" + producto.image %> alt="descripcion de producto" >
						</figure>
						<article class="product-box_data">
							<span> <%= producto.discount %> % </span>
							<p> <%= producto.name %> </p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %>
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>