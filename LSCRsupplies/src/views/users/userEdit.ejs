<!DOCTYPE html>
<html lang="en">
    <!-- Include Head -->
<%- include('partials/headRegistro', {title: 'Edita tu registro!'}) %>
<body>
	<!-- Header -->
	<%- include('partials/Header') %>
  <!-- /Header -->
    <!-- Main div del sitio. -->
  <div class="container">
     <!--formulario de registro-->
    <section class=formulario__registro>  
         <div class="formulario">
             <div class="container__titulo">
             <p>Edita tus datos de Registro</p>
         </div>    
       
      <section class="grid__container">
         <!--datos para la edicion-->
       <div class= "datos">  
         <form action="/users/edit/<%= userToEdit.id %>?_method=PUT" method="post">
           <div>
              <p>
                 <label for="first_name">Nombre:</label><br>
                 <Input type="text" name="first_name" value="<%=userToEdit.first_name%>">
               </p>
               <p>
                  <label for="last_name">Apellido:</label><br>
                  <Input type="text" name="last_name" value="<%=userToEdit.last_name%>">
               </p>
               <p>
                 <label for="email">Email:</label><br>
                 <Input type="email" name="email" value="<%=userToEdit.email%>">
               </p>
              <p>
                 <label for="password">Contraseña:</label><br>
                 <Input type="password" name="password" value="<%=userToEdit.password%>">
              <p>
              <p>
                 <input id="file" type="file" name="imagen" width="200px"/>
                 <hr>
                 <div class="imgUser" id="preview" >
                    <img src="<%= "/images/users/" + userToEdit.image %>" alt="imagen">
                 </div>
              </p>
            </div>
            <div class="registrarme">
               <button class="boton__registrarme" type="submit" id="registro" label= "Registrarme">
                  <span class="registrarme" >Confirmar</span>
               </button>
                 <!--     </form> -->
                 <a href="/users/logout" class="boton__registrarme">Logout</a>
            </div>
            </form>
         </div>
         <!--Imagen LCS Supplies-->
         <div class="imagen">
            <img class= "register__image" src="/images/imagen_register.png" alt="Imagen LCS Supplies" width="450px" heigth= "450px">
        </div>
    <!-- /section>
      </div>
      
       
      </section> -->
   </section>      
   <!-- Footer del sitio-->
   <%- include('partials/footer') %>
   <!-- /footer -->
  <script>
       document.getElementById("file").onchange = function(e) {
      // Creamos el objeto de la clase FileReader
      let reader = new FileReader();
      // Leemos el archivo subido y se lo pasamos a nuestro fileReader
      reader.readAsDataURL(e.target.files[0]);
      // Le decimos que cuando este listo ejecute el código interno
      reader.onload = function(){
      let preview = document.getElementById('preview'),
      image = document.createElement('img');
      image.src = reader.result;
      preview.innerHTML = '';
      preview.append(image);
      };
     }
   </script>
</body>
</html>